<%- include('./layout/head'); %>

    <!-- Main content -->
    <main class="main">

        <!-- Breadcrumb -->
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">خانه</a></li>
            <li class="breadcrumb-item active">کاربران</li>
            <li class="breadcrumb-item ">افزودن کاربر</li>

            <!-- <li class="breadcrumb-menu">
                <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                    <a class="btn btn-secondary" href="#"><i class="icon-speech"></i></a>
                    <a class="btn btn-secondary" href="./"><i class="icon-graph"></i> &nbsp;داشبرد</a>
                    <a class="btn btn-secondary" href="#"><i class="icon-settings"></i> &nbsp;تنظیمات</a>
                </div>
            </li> -->
        </ol>

        <div class="container-fluid">

            <div class="animated fadeIn">
                <div class="row container-fluid" id="addUser">
                    <div class="card">
                            <div class="card-header">
                                افزودن
                                <strong>کاربر</strong>
                            </div>
                            <div class="card-block">
                                <form action="http://localhost:5000/api/register" method="post" class="form-horizontal ">
                                    <div class="form-group row">
                                        <label class="col-sm-3 form-control-label" for="name">نام کاربر جدید را وارد کنید</label>
                                        <div class="col-sm-6">
                                            <input type="text" id="input-small" name="name" class="form-control input-sm" placeholder="نام را وارد کنید ...">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-3 form-control-label" for="email">ایمیل کاربر را وارد کنید</label>
                                        <div class="col-sm-6">
                                            <input type="email" id="input-normal" name="email" class="form-control" placeholder="ایمیل کاربر را وارد کنید ...">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-3 form-control-label" for="password">رمز عبور کاربر را وارد کنید</label>
                                        <div class="col-sm-6">
                                            <input type="password" id="input-large" name="password" class="form-control input-lg" placeholder="رمز عبور را وارد کنید ...">
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-dot-circle-o"></i> ثبت اطلاعات</button>
                                    <button type="reset" class="btn btn-sm btn-danger"><i class="fa fa-ban"></i> پاک کردن اطلاعات وارد شده</button>
                                </div>
                                </form>
                        </div>
                </div>
            </div>

        </div>
        <!--/.container-fluid-->
    </main>

<%- include('./layout/footer'); %>
